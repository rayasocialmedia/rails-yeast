<%= form_for(@contact, html: { class: 'form-horizontal' }) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, t("error")) %> <%= t("form_errors") %></h2>
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="control-group">
	<%= f.label :name, t('users.name'), :class => 'control-label' %>
	<div class="controls"><%= f.text_field :name %></div>
</div>

<div class="control-group">
	<%= f.label :email, t('users.email'), :class => 'control-label' %>
	<div class="controls"><%= f.email_field :email %></div>
</div>

<div class="control-group">
	<%= f.label :content, t('resources.content'), :class => 'control-label' %>
	<div class="controls"><%= f.text_area :content, :rows => 10, :cols => 60 %></div>
</div>

<div class="form-actions">
    <%= f.submit t('resources.contact_send'), :class => 'btn btn-primary' %>
</div>
<% end %>
